/* miniprogram/pages/topic/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f4f4f4;
}

.search-bar {
  padding: 20rpx;
  background-color: #fff;
}

.search-input {
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}

.topic-list {
  flex: 1;
  height: 100%; /* 必须给 scroll-view 一个固定高度 */
}

.topic-item {
  background-color: #fff;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.topic-content {
  margin-top: 20rpx;
}

.topic-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 10rpx;
}

.topic-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.topic-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.topic-category {
  font-size: 24rpx;
  background-color: #eef2ff;
  color: #4a68f2;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.stats {
  font-size: 24rpx;
  color: #999;
}
.stats text {
  margin-left: 20rpx;
}

.loading-tip {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.publish-btn {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx; /* 适配 tabbar 高度 */
  width: 100rpx;
  height: 100rpx;
  background-color: #2468f2;
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  box-shadow: 0 8rpx 16rpx rgba(36, 104, 242, 0.3);
}